import java.util.HashSet;

public class Practice {

    public static void main(String[] args) {
        int arr[] = {100,4,200,1,3,2};

        //Using the Hashset
        HashSet<Integer> set = new HashSet<>();
        for(int num : arr){
            set.add(num); //We will add the number to the set
        }
        int longest = 0;
        for (int i = 0; i < arr.length; i++) {
            if (!set.contains(arr[i]-1)) {
                int currelem = arr[i];
                int currstreak = 1;

                while (set.contains(currelem+1)) {
                    //Agar hae toh
                    currelem ++;
                    currstreak++;
                    
                }

                longest = Math.max(longest, currstreak);

            }
        }
        System.out.println("Longest streak is the " + longest);
    }
}
