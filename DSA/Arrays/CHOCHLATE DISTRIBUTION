 public static int Chochlate_Distribution(int arr[],int m){
        if (m > arr.length) {
            return -1;
        }

        Arrays.sort(arr);

        if (m == arr.length) {
            return arr[arr.length-1] - arr[0];
        }
        int totmax = Integer.MAX_VALUE;

        for (int i = m-1; i < arr.length; i++) {
            //PEECHE vala hatana hae
           int diff = arr[i] - arr[i-m+1];

            totmax = Math.min(totmax, diff);
        }
        return totmax;
    }
